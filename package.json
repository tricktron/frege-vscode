{
	"name": "frege-vscode",
	"description": "VSCode lsp frege client",
	"author": "Thibault Gagnaux",
	"license": "MIT",
	"version": "1.0.0-alpha",
	"publisher": "ch-fhnw-thga",
	"repository": {
		"type": "git",
		"url": "https://github.com/tricktron/frege-vscode"
	},
	"engines": {
		"vscode": "^1.58.1"
	},
	"dependencies": {
		"vscode-languageclient": "^7.0.0"
	},
	"activationEvents": [
		"onLanguage:plaintext"
	],
	"main": "./out/src/extension",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Example configuration",
			"properties": {
				"languageServerExample.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"languageServerExample.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"clean": "rm -rf out",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"test": " npm run clean && npm run compile && mocha -r ts-node/register test/**/*.test.ts",
		"e2eTest": "npm run clean && npm run compile && ./e2e.sh"
	},
	"devDependencies": {
		"@types/mocha": "^8.2.3",
		"@types/node": "^14.7.3",
		"@types/tar-fs": "^2.0.1",
		"@types/vscode": "^1.58.1",
		"mocha": "^9.0.2",
		"tar-fs": "^2.1.1",
		"ts-node": "^10.1.0",
		"typescript": "^4.3.5",
		"vscode-test": "^1.6.1"
	}
}
